	"item": [
		{
			"name": "Create_orders",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"var status_code = pm.response.code;\r",
							"\r",
							"if (status_code == 200) {\r",
							"    var responseData = pm.response.json();\r",
							"\r",
							"    pm.environment.set(\"orderId\", responseData.id)}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"\r",
							"pm.environment.set(\"petId\", 102);\r",
							"pm.environment.set(\"quantity\", 2);\r",
							"pm.environment.set(\"shipDate\", new Date().toISOString().replace('Z', '+0000'));\r",
							"pm.environment.set(\"status\", \"placed\");\r",
							"pm.environment.set(\"complete\", true);\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"id\": {{orderId}},\r\n  \"petId\": {{petId}},\r\n  \"quantity\": {{quantity}},\r\n  \"shipDate\": \"{{shipDate}}\",\r\n  \"status\": \"{{status}}\",\r\n  \"complete\": {{complete}}\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/store/order",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"store",
						"order"
					]
				}
			},
			"response": []
		},
		{
			"name": "GET Order",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var status_code = pm.response.code;\r",
							"\r",
							"if (status_code == 200) {\r",
							"    var responseData = pm.response.json();\r",
							"\r",
							"    pm.test(\"Order ID Check\", function() {\r",
							"        pm.expect(responseData.id).to.eql(pm.environment.get(\"orderId\"));\r",
							"    });\r",
							"\r",
							"    pm.test(\"Pet ID Check\", function() {\r",
							"        pm.expect(responseData.petId.toString()).to.eql(pm.environment.get(\"petId\").toString());\r",
							"    });\r",
							"\r",
							"    pm.test(\"Quantity Check\", function() {\r",
							"        pm.expect(responseData.quantity.toString()).to.eql(pm.environment.get(\"quantity\").toString());\r",
							"    });\r",
							"\r",
							"    pm.test(\"Status Check\", function() {\r",
							"        pm.expect(responseData.status).to.eql(pm.environment.get(\"status\"));\r",
							"    });\r",
							"\r",
							"    pm.test(\"Complete Value Check\", function() {\r",
							"        pm.expect(responseData.complete.toString()).to.eql(pm.environment.get(\"complete\").toString());\r",
							"    });\r",
							"\r",
							"} else if (status_code == 404) {\r",
							"    pm.test(\"Order not found\");\r",
							"} else if (status_code == 400) {\r",
							"    pm.test(\"Bad Request â€“ Check input values\");\r",
							"} else {\r",
							"    pm.test(\"Something went wrong\");\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"packages": {},
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/store/order/{{orderId}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"store",
						"order",
						"{{orderId}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete order",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var status_code = pm.response.code;\r",
							"\r",
							"if (status_code == 200) {\r",
							"    var responseData = pm.response.json();\r",
							"\r",
							"    pm.test(\"Order Deleted Successfully\", function() {\r",
							"        pm.expect(responseData.message).to.eql(pm.environment.get(\"orderId\").toString());\r",
							"    });\r",
							"\r",
							"} else if (status_code == 404) {\r",
							"    pm.test(\"Order Not Found\");\r",
							"\r",
							"} else {\r",
							"    pm.test(\"Something went wrong\");\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/store/order/{{orderId}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"store",
						"order",
						"{{orderId}}"
					]
				}
			},
			"response": []
		}
	]
